<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PruebaTecnica</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PruebaTecnica.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/flexslider.css" />
    <link rel="stylesheet" href="~/css/EasyUIBootstrap.css" />
    <link rel="stylesheet" href="~/css/icon.css" />
    <link rel="stylesheet" href="~/js/JqueryUI/jquery-ui.min.css" />
    <link rel="stylesheet" href="~/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/css/alertify.min.css">
    <link rel="stylesheet" href="~/css/bootstrap-datepicker.min.css">
</head>
<body style="height: 100%;">
    <div id="loader-wrapper">
        <div id="loader"></div>
        <div class="loader-section section-left"></div>
        <div class="loader-section section-right"></div>
    </div>

    <partial name="_Header" />
    <div id="main">
        @RenderBody()
    </div>

    <footer style="
    clear: both;
    border: 1px groove #aaaaaa;
    background: #6288f1;
    color: black;
    padding: 0;
    text-align: center;
    vertical-align: middle;
    line-height: normal;
    margin: 0;
    position: fixed;
    bottom: 0px;
    z-index: 1000;
    width: 100%;">
        <div class="container">
            <span>&copy; Todos los derechos reservados <script type="text/javascript">document.write(new Date().getFullYear());</script></span>
        </div>
    </footer>
    @* Dialogos dinámicos *@
    <div id="dialogTemplate">
    </div>

    <script id="DialogLoginTemplate" type="text/x-template">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <div class="_lk_de">
                <div class="form-03-main">
                  <div class="logo">
                    <img src="images/user.png">
                  </div>
                  <div class="form-group" style="padding-bottom:0.5rem">
                    <input name="usuario" class="form-control _ge_de_ol" type="email" placeholder="Ingrese correo electrónico" required="" aria-required="true">
                  </div>

                  <div class="form-group" style="padding-bottom:0.5rem">
                    <input type="password" name="password" class="form-control _ge_de_ol" placeholder="Ingrese contraseña" required="" aria-required="true">
                  </div>

                    <div id="emailHelp" class="form-text text-center text-dark">¿No Registrado?
                       <a href="#" onclick="showPopupDialog('DialogRegisterTemplate');" class="text-dark fw-bold" style="text-decoration: none;"> Crear una cuenta</a>
                    </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    </script>

    <script id="DialogRegisterTemplate" type="text/x-template">
        <br/><br/>
        <div class="d-flex flex-row align-items-center mb-4">
            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
            <div class="form-outline flex-fill mb-0">
                <input type="text" name="nombre" id="txtNombre" class="form-control _ge_de_ol" placeholder="Ingrese su nombre" required="" aria-required="true" />
            </div>
        </div>

        <div class="d-flex flex-row align-items-center mb-4">
            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
            <div class="form-outline flex-fill mb-0">
                <input type="email" name="usuario" id="txtUsuario" class="form-control _ge_de_ol" placeholder="Ingrese su correo electrónico" required="" aria-required="true" />
            </div>
        </div>

        <div class="d-flex flex-row align-items-center mb-4">
            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
            <div class="form-outline flex-fill mb-0">
                <input type="text" name="direccion" id="txtDireccion" class="form-control _ge_de_ol" placeholder="Escriba su dirección" required="" aria-required="true" />
            </div>
        </div>

          <div class="d-flex flex-row align-items-center mb-4">
            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
            <div class="form-outline flex-fill mb-0">
                <input type="text" name="noDocumento" id="txtNoDocumento" class="form-control _ge_de_ol" placeholder="Escriba su No.Ducumento" required="" aria-required="true" />
            </div>
        </div>

        <div class="d-flex flex-row align-items-center mb-4">
            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
            <div class="form-outline flex-fill mb-0">
                <input type="password" name="password" id="txtPassword" class="form-control _ge_de_ol" placeholder="Escriba su contraseña" required="" aria-required="true" />
            </div>
        </div>

        <div class="d-flex flex-row align-items-center mb-4">
            <i class="fas fa-key fa-lg me-3 fa-fw"></i>
            <div class="form-outline flex-fill mb-0">
                <input type="password" name="password2" id="txtPassword2" class="form-control _ge_de_ol" placeholder="Repita su contraseña" required="" aria-required="true" />
            </div>
        </div>

        <div class="form-check d-flex justify-content-center mb-4">
            <input name="terminos" class="form-check-input me-2" type="checkbox" value="" id="txtTerminos" />
            <label class="form-check-label" for="form2Example3">
                Aceptar todos los <a href="#!">terminos de servicio</a>
            </label>
        </div>
    </script>

    <script id="DialogContactTemplate" type="text/x-template">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <div class="_lk_de">
                <div class="form-03-main">
                    <center>
                        <img src="images/img-01-1.png" width="120" style="margin-bottom: 25px">
                    </center>

                    <div class="form-group" style="padding-bottom:0.5rem">
                        <input typeof="email" name="Correo" class="form-control _ge_de_ol" type="text" placeholder="Ingrese correo electrónico" required="" aria-required="true" />
                    </div>

                    <div class="form-group" style="padding-bottom:0.5rem">
                        <input name="Nombre" class="form-control _ge_de_ol" type="text" placeholder="Ingrese nombre completo" required="" aria-required="true" />
                    </div>

                    <div class="form-group">
                        <textarea name="Message" class="form-control _ge_de_ol" placeholder="Escriba su mensaje" required="" aria-required="true"></textarea>
                    </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    </script>

    <script id="skeletonTemplate" type="text/x-jsrender">
        <div id="skeleton" class="mt-1 mb-3 button-container" style="opacity: 0.7;">
            <div class="row">
                {{for start=0 end=CantSkeleton}}
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="movie--isloading">
                            <div class="loading-image"></div>
                            <div class="loading-content">
                                <div class="loading-text-container">
                                    <div class="loading-main-text"></div>
                                    <div class="loading-sub-text"></div>
                                </div>
                                <div class="loading-btn"></div>
                            </div>
                        </div>
                    </div>
                {{/for}}
            </div>
        </div>
    </script>

    <script id="DlgGenericScript" type="text/x-jsrender">
        <div class="modal fade" id="DlgGenericModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="DlgGenericModalLabel" aria-hidden="true" style="opacity: 0.9">
            <div class="modal-dialog modal-lg modal-dialog-centered rounded-0">
                <div class="modal-content rounded-0">
                    <div class="modal-header py-1">
                        <h5 class="modal-title" id="genericModalLabel">{{:Titulo}}</h5>
                        <button type="button" style="font-size: .65em;" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body rounded-0">
                        {{:Contenido}}
                    </div>
                </div>
            </div>
        </div>
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/JqueryUI/jquery-ui.min.js"></script>
    <script src="~/js/jquery.blockUI.js"></script>
    <script src="~/js/alertify.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jsviews.min.js"></script>
    <script src="~/js/moment.min.js"></script>
    <script src="~/js/PruebaTecnica.js" asp-append-version="true"></script>
    <script src="~/js/jquery-2.1.4.min.js"></script>
    <script src="~/js/responsiveslides.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sweetalert.js" type="text/javascript"></script>
    <script type="module" src="~/js/controllers/Home.js" asp-append-version="true"></script>
    <script src="~/js/jquery.easyui.min.js"></script>
    <script src="~/js/bootstrap-datepicker.min.js"></script>
    <script src="~/js/bootstrap-datepicker.es.js"></script>
    <script src="~/js/datagrid-export.js"></script>

    <script>
        window.addEventListener('load', () => {
            $('body').addClass('loaded');
        });

        window.EasyUI = jQuery.noConflict();
        loadSlider();

        function loadSlider() {
            window.EasyUI(document).ready(() => {
                window.EasyUI("#slider3").responsiveSlides({
                    auto: true,
                    pager: true,
                    nav: false,
                    speed: 500,
                    namespace: "callbacks",
                    before: function () {
                        window.EasyUI('.events').append("<li>before event fired.</li>");
                    },
                    after: function () {
                        window.EasyUI('.events').append("<li>after event fired.</li>");
                    }
                });
            });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>